import React from 'react';
import DropDownMenu from 'material-ui/DropDownMenu';
import MenuItem from 'material-ui/MenuItem';
import { scroller } from 'react-scroll';

const styles = {
  customWidth: {
    width: 200,
  },
};

class Dropper extends React.Component {
  constructor(props) {
    super(props)
    this.state = {value: 1};
    this.handleChange = this.handleChange.bind(this);
  }
  handleChange(event, index, value) {
    this.setState({value});
  }


  const scrollToElement = (element) => {
        scroller.scrollTo(element,{
            duration: 1500,
            delay:100,
            smooth: true,
            offset: -150,
            color: "black";
        });
        //props.onClose(false)
    }
    render(){
      if( this.state.value == 1 ){
        calendarDisplay = <BasicShine />;
      }
      else if( this.state.value == 2 ){
        calendarDisplay = <PremiumShine />;
      }
      else if (this.state.value === 3 ){
      calendarDisplay = <UltimateShine />
      }

      return (
        <div>
          <DropDownMenu
            value={this.state.displayValue}
            onChange={this.handleChange}
            style={styles.customWidth}
            autoWidth={false}
          >
            <MenuItem value="Basic Shine" primaryText="Basic Shine" onClick=scrollToElement()/>
            <MenuItem value="Premium Shine" primaryText="Premiun Shine"/>
            <MenuItem value="Ultimate Shine" primaryText="Ultimate Shine"/>
          </DropDownMenu>
        </div>
    )}
}
